<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="css/styles.css" />
    <link rel="stylesheet" href="css/styles-dashboard.css" />
    <title><%= pageTitle %> | <%= user?.first_name %></title>
</head>

<body>
    <div class="main--container">
        <header><%- include('../partials/header.ejs') %></header>

        <main>
            <section>
                <div class="container todo-main-container">
                    <div class="todo-container">
                        <div class="item-display-container">
                            <p>Do laundry</p>
                        </div>
                        <div class="item-action-button-container">
                            <div>
                                <button class="btn btn-done">Done</button>
                            </div>
                            <div>
                                <button class="btn btn-update">Update</button>
                                <button class="btn btn-delete">Delete</button>
                            </div>
                        </div>
                    </div>

                    <div class="todo-container">
                        <div class="item-display-container">
                            <p>Clean the car</p>
                        </div>
                        <div class="item-action-button-container">
                            <div>
                                <button class="btn btn-done">Done</button>
                            </div>
                            <div>
                                <button class="btn btn-update">Update</button>
                                <button class="btn btn-delete">Delete</button>
                            </div>
                        </div>
                    </div>

                    <div class="todo-container">
                        <div class="item-display-container">
                            <p>Clean dishes</p>
                        </div>
                        <div class="item-action-button-container">
                            <div>
                                <button class="btn btn-done">Done</button>
                            </div>
                            <div>
                                <button class="btn btn-update">Update</button>
                                <button class="btn btn-delete">Delete</button>
                            </div>
                        </div>
                    </div>

                    <div class="todo-container">
                        <div class="item-display-container">
                            <p>Finish homework</p>
                        </div>
                        <div class="item-action-button-container">
                            <div>
                                <button class="btn btn-done">Done</button>
                            </div>
                            <div>
                                <button class="btn btn-update">Update</button>
                                <button class="btn btn-delete">Delete</button>
                            </div>
                        </div>
                    </div>

                    <div class="todo-container">
                        <div class="item-display-container">
                            <p>Make food</p>
                        </div>
                        <div class="item-action-button-container">
                            <div>
                                <button class="btn btn-done">Done</button>
                            </div>
                            <div>
                                <button class="btn btn-update">Update</button>
                                <button class="btn btn-delete">Delete</button>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </main>

        <div class="modal fade" id="itemModal" tabindex="-1" role="dialog" aria-labelledby="itemModal"
            aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header custom-header">
                        <h5 class="modal-title" id="itemModalTitle">Modal ID</h5>
                        <button type="button" class="modal-close btn btn-done" data-dismiss="modal">X</button>
                    </div>
                    <div class="modal-body">
                        <p id="modal-content-item">...</p>
                    </div>
                    <div class="modal-footer">
                        <div>
                            <button type="button" class="modal-close btn btn-done" data-dismiss="modal">Done</button>
                        </div>
                        <div>
                            <button type="button" class="btn btn-update">Update</button>
                            <button type="button" class="btn btn-delete">Delete</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
        </main>
    </div>

    <!-- SCRIPTS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="/js/dashboard.js"></script>
</body>
</html>